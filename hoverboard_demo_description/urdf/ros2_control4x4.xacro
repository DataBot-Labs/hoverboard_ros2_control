<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:macro name="hoverboard_ros2_control" params="front">
  <xacro:macro name="hoverboard_ros2_control" params="back">

    <ros2_control name="front" type="system">
      <hardware>
        <plugin>hoverboard_hardware_interface/HoverboardHardwareInterface</plugin>
        <param name="front_left_wheel_joint_name">driving_wheel_left_joint</param>
        <param name="front_right_wheel_joint_name">driving_wheel_right_joint</param>
        <param name="loop_rate">50</param>
        <param name="device">/dev/ttyUSB0</param>
        <param name="baud_rate">115200</param>
        <param name="timeout">1000</param>
        <param name="encoder_ticks_per_revolution">90</param>
      </hardware>
      <joint name="driving_wheel_front_left_joint">
        <command_interface name="velocity"/>
        <state_interface name="position"/>
        <state_interface name="velocity"/>
      </joint>
      <joint name="driving_wheel_front_right_joint">
        <command_interface name="velocity"/>
        <state_interface name="position"/>
        <state_interface name="velocity"/>
      </joint>

 <ros2_control name="back" type="system">
      <hardware>
        <plugin>hoverboard_hardware_interface/HoverboardHardwareInterface</plugin>
        <param name="back_left_wheel_joint_name">driving_wheel_left_joint</param>
        <param name="back_right_wheel_joint_name">driving_wheel_right_joint</param>
        <param name="loop_rate">50</param>
        <param name="device">/dev/ttyUSB1</param>
        <param name="baud_rate">115200</param>
        <param name="timeout">1000</param>
        <param name="encoder_ticks_per_revolution">90</param>
      </hardware>
      <joint name="driving_wheel_back_left_joint">
        <command_interface name="velocity"/>
        <state_interface name="position"/>
        <state_interface name="velocity"/>
      </joint>
      <joint name="driving_wheel_back_right_joint">
        <command_interface name="velocity"/>
        <state_interface name="position"/>
        <state_interface name="velocity"/>
      </joint>
    </ros2_control>

  </xacro:macro>

</robot>
